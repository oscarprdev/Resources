---
import Header from '~/components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Astro description"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global lang="scss">
	:root {
		--dark-100: #000000;
		--dark-200: #313131;
		--dark-300: #494949;
		--dark-400: #868686;
		--dark-500: #b9b9b9;

		--light-100: #ffffff;
		--light-200: #f4f4f4;
		--light-300: #e6e6e6;
		--light-400: #d9d9d9;
		--light-500: #cccccc;

		--accent-blue: #3433ff;
		--accent-blue-light: #3ad5fa;
		--accent-green: #6aff97;
		--accent-yellow: #ffeb56;

		--font-xs: 0.75rem;
		--font-sm: 0.875rem;
		--font-md: 1rem;
		--font-lg: 1.125rem;
		--font-xl: 1.25rem;
		--font-2xl: 1.5rem;
		--font-3xl: 1.875rem;
		--font-4xl: 2.25rem;
		--font-5xl: 3rem;

		--popover-width: 300px;
		--header-height: 4rem;
	}
	html {
		font-family: Helvetica, system-ui, sans-serif;
		height: 100%;
	}

	body {
		margin: 0;
		overflow-x: hidden;
		height: 100%;
	}

	:where(#filters) {
		--popover-height: fit-content;
		--popover-padding: 0;
		--popover-top: 165px;
		--popover-left: 3rem;

		& {
			opacity: 0;
			position: absolute;
			top: var(--popover-top) !important;
			left: var(--popover-left) !important;
			width: 100%;
			max-width: var(--popover-width);
			height: var(--popover-height);
			padding: var(--popover-padding);
			background-color: var(--light-100);
			border: 1px solid var(--light-500);
			inset: auto;

			pointer-events: none;

			box-sizing: border-box;
			transition: opacity 0.3s ease;
		}

		&:popover-open {
			opacity: 1;
			position: absolute;
			top: var(--popover-top) !important;
			left: var(--popover-left) !important;
			pointer-events: auto;
		}

		@starting-style {
			&:popover-open {
				opacity: 0;
			}
		}

		@media (max-width: 1100px) {
			--popover-top: 150px;
			--popover-left: 1rem;
		}

		@media (max-width: 750px) {
			--popover-top: 13.7rem;
			--popover-left: 1rem;
		}

		@media (max-width: 450px) {
			--popover-width: calc(100vw - 2rem);
		}
	}

	.resource-bookmark-btn {
		position: absolute;
		padding: 0.3rem;

		display: grid;
		place-items: center;
		border: none;
		background-color: transparent;
		color: var(--light-200);
		cursor: pointer;
		z-index: 10;
		transition: all 0.2s ease;
	}

	.resource-bookmark-btn:hover {
		color: var(--accent-green);
	}

	.card {
		height: 200px;
		position: relative;
		background-color: var(--dark-200);

		padding: 0 1rem;
		border: 1px solid var(--dark-300);
		transition: all 0.3s ease;
		text-decoration: none;
		box-shadow:
			0 4px 6px -1px rgb(0 0 0 / 0.1),
			0 2px 4px -2px rgb(0 0 0 / 0.1);

		.resource-bookmark-btn {
			top: 1rem;
			right: 1rem;
		}

		&__content:focus {
			outline: 3px solid var(--accent-blue);
		}

		&__content {
			display: flex;
			flex-direction: column;
			color: var(--light-300);
			height: 100%;
			border-left: 1px solid var(--dark-300);
			border-right: 1px solid var(--dark-300);

			&__section {
				position: absolute;
				left: 0;
				box-sizing: border-box;
				padding-left: 2rem;
				width: 100%;
				border-bottom: 1px solid var(--dark-300);
			}

			&__section--title {
				display: flex;
				align-items: center;
				gap: 0.5rem;
				top: 1rem;
				border-top: 1px solid var(--dark-300);

				&__favicon {
					width: 1.5rem;
					aspect-ratio: 1 / 1;
				}

				&__text {
					font-size: var(--font-3xl);
					font-style: italic;
					line-height: 0;
				}
			}

			&__section--category {
				top: 6rem;
				border-bottom: 1px solid var(--dark-300);

				&__text {
					font-size: var(--font-sm);
					font-weight: 200;
					line-height: 0;
					margin-bottom: 0.5rem;
				}
			}

			&__section--description {
				bottom: 1rem;
				padding-right: 1rem;
				border-top: 1px solid var(--dark-300);
				display: flex;
				align-items: start;
				justify-content: space-between;
				height: 5rem;

				&__text {
					font-size: var(--font-xs);
					font-weight: 200;
					width: 85%;
					text-wrap: pretty;
				}

				span {
					width: 2rem;
					height: 100%;
					transition: all 0.2s ease-in-out;
				}
			}
		}
	}

	.card:hover {
		background-color: var(--dark-100);
	}

	.card__thin {
		position: relative;
		background-color: var(--dark-200);
		border-top: 1px solid var(--dark-400);
		border-bottom: 1px solid var(--dark-400);
		box-sizing: border-box;
		display: grid;
		place-items: center;
		transition: all 0.2s ease;
		box-shadow:
			0 4px 6px -1px rgb(0 0 0 / 0.1),
			0 2px 4px -2px rgb(0 0 0 / 0.1);

		.resource-bookmark-btn {
			position: absolute;
			top: 0.3rem;
			right: 0.3rem;

			svg {
				width: 1.2rem;
			}
		}

		&__link {
			position: relative;
			text-decoration: none;
			color: var(--dark-100);
			width: 100%;
			height: 4rem;
			box-sizing: border-box;

			&__title {
				display: flex;
				align-items: center;
				width: 100%;
				height: 3rem;
				padding-left: 1.5rem;
				padding-top: 1rem;
				box-sizing: border-box;
				border-bottom: 1px solid var(--dark-300);
				gap: 0.5rem;

				&--favicon {
					width: 1rem;
					object-fit: cover;
					aspect-ratio: 1 / 1;
				}

				&--text {
					font-size: var(--font-md);
					font-style: italic;
					color: var(--light-100);
					line-height: 0;
				}

				&--categories {
					color: var(--light-100);
					font-weight: 100;
					font-size: var(--font-xs);
					margin-bottom: 0.2rem;
					margin-left: 1rem;
				}
			}

			&__decorator {
				position: absolute;
				display: flex;
				box-sizing: border-box;
				top: 0;
				left: 0;
				width: 1rem;
				height: 100%;
				border-right: 1px solid var(--dark-300);
				border-left: 1px solid var(--dark-400);

				&--square {
					width: 1rem;
					height: 1rem;
					margin-top: auto;
				}
			}
		}
	}

	.card__thin:hover {
		background-color: var(--dark-100);
	}

	.resource-remove-btn {
		position: absolute;
		top: 0rem;
		right: 0rem;
		height: 2rem;
		width: 2rem;
		border: 1px solid var(--dark-300);
		border-top: 0;
		background-color: transparent;
		color: var(--light-300);
		cursor: pointer;
		font-size: var(--font-lg);
		font-weight: 100;
		transition: all 0.3s ease;
		line-height: 0.5;
		box-sizing: border-box;

		div {
			transform: rotate(0);
			transition: all 0.3s ease;
		}
	}

	.resource-remove-btn:hover {
		border: 1px solid var(--dark-500);
		border-top: 0;
	}

	.resource-remove-btn:hover div {
		transform: rotate(180deg);
	}
</style>
