---
import Header from '~/components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Astro description"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--dark-100: #000000;
		--dark-200: #313131;
		--dark-300: #494949;
		--dark-400: #868686;
		--dark-500: #b9b9b9;

		--light-100: #ffffff;
		--light-200: #f4f4f4;
		--light-300: #e6e6e6;
		--light-400: #d9d9d9;
		--light-500: #cccccc;

		--accent-blue: #3433ff;
		--accent-blue-light: #3ad5fa;
		--accent-green: #6aff97;
		--accent-yellow: #ffeb56;

		--font-xs: 0.75rem;
		--font-sm: 0.875rem;
		--font-md: 1rem;
		--font-lg: 1.125rem;
		--font-xl: 1.25rem;
		--font-2xl: 1.5rem;
		--font-3xl: 1.875rem;
		--font-4xl: 2.25rem;
		--font-5xl: 3rem;

		--popover-width: 300px;
	}
	html {
		font-family: Helvetica, system-ui, sans-serif;
	}

	body {
		margin: 0;
		overflow-x: hidden;
	}

	:where(#filters) {
		--popover-height: fit-content;
		--popover-padding: 0;
		--popover-top: 165px;
		--popover-left: 3rem;

		& {
			opacity: 0;
			position: absolute;
			top: var(--popover-top) !important;
			left: var(--popover-left) !important;
			width: 100%;
			max-width: var(--popover-width);
			height: var(--popover-height);
			padding: var(--popover-padding);
			background-color: var(--light-100);
			border: 1px solid var(--light-500);
			inset: auto;

			box-sizing: border-box;
			transition: opacity 0.3s ease;
		}

		&:popover-open {
			opacity: 1;
			position: absolute;
			top: var(--popover-top) !important;
			left: var(--popover-left) !important;
		}

		@starting-style {
			&:popover-open {
				opacity: 0;
			}
		}

		@media (max-width: 1100px) {
			--popover-top: 150px;
			--popover-left: 1rem;
		}

		@media (max-width: 750px) {
			--popover-top: 13.7rem;
			--popover-left: 1rem;
		}

		@media (max-width: 450px) {
			--popover-width: calc(100vw - 2rem);
		}
	}
</style>
