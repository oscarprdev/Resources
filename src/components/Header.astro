---
import Bookmarks from './Bookmarks.astro';
---

<header>
	<h1>Resources</h1>
	<Bookmarks />
</header>

<style scoped>
	header {
		position: sticky;
		top: 0;
		display: flex;
		align-items: center;
		padding-left: 3rem;
		padding-right: 3rem;
		background-color: var(--dark-100);
		height: var(--header-height);
		border-bottom: 1px solid var(--dark-200);

		z-index: 100;
		box-sizing: border-box;

		h1 {
			font-size: var(--font-4xl);
			margin-right: auto;
			line-height: 0;
			color: var(--light-100);
		}

		a {
			color: var(--light-100);
		}
	}

	@media (max-width: 750px) {
		header {
			padding-left: 1rem;
			padding-right: 1rem;
		}
	}
</style>
