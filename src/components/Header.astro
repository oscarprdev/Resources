---
import ArrowUp from '~/icons/arrow-up.astro';
import Bookmarks from './Bookmarks.astro';
---

<header class="header">
	<h1 class="header__title">Resources</h1>
	<div class="header__message">
		<a
			href="https://github.com/oscarprdev/resources"
			target="_blank"
			class="header__message__content">
			<p>Contribute adding your favourites resources on GitHub!</p>

			<span>
				<ArrowUp />
			</span>
		</a>
	</div>
	<Bookmarks />
</header>

<style lang="scss" is:global>
	.header {
		position: sticky;
		top: 0;
		display: grid;
		place-items: center;
		padding-left: 3rem;
		padding-right: 3rem;
		background-color: var(--dark-100);
		height: var(--header-height);
		border-bottom: 1px solid var(--dark-200);

		z-index: 100;
		box-sizing: border-box;

		&__title {
			font-size: var(--font-4xl);
			margin-right: auto;
			line-height: 0;
			color: var(--light-100);
		}

		&__message {
			position: absolute;
			display: grid;
			place-items: center;
			width: fit-content;
			padding: 0.1rem;
			height: 2rem;
			animation: gradient 8s ease infinite;
			background: linear-gradient(-45deg, #ff00ff, #00ffff, #0000ff);
			background-size: 400% 400%;

			&__content {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.3rem;
				background-color: var(--dark-100);
				width: 100%;
				height: 100%;
				padding: 0 1rem;
				color: var(--light-500);
				box-sizing: border-box;
				transition: all 0.2s ease;
				text-decoration: none;

				p {
					font-size: var(--font-xs);
					line-height: 0;
				}

				span {
					display: grid;
					place-items: center;
					width: 1rem;
				}
			}

			&__content:hover {
				color: var(--light-100);
			}
		}
	}

	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	@media (max-width: 1100px) {
		.header {
			padding-left: 1rem;
			padding-right: 1rem;
		}
	}

	@media (max-width: 750px) {
		.header {
			&__message {
				left: 15rem;
			}
		}
	}

	@media (max-width: 650px) {
		.header {
			&__message {
				display: none;
			}
		}
	}
</style>
